<form action="/restaurants/{{ restaurant._id }}/edit" method="POST" class="column">
  <div class="input-group mb-3 col-12 col-md-10 mx-auto">
    <div class="input-group-prepend">
      <span class="input-group-text" id="basic-addon1">Name</span>
    </div>
    <input type="text" placeholder="name" name="name" value="{{ restaurant.name }}">
  </div>
  <div class="input-group mb-3 col-12 col-md-10 mx-auto">
    <div class="input-group-prepend">
      <span class="input-group-text" id="basic-addon2">Category</span>
    </div>
    <input type="text" placeholder="category" name="category" value="{{ restaurant.category }}">
  </div>
  <div class="input-group mb-3 col-12 col-md-10 mx-auto">
    <div class="input-group-prepend">
      <span class="input-group-text" id="basic-addon3">Image</span>
    </div>
    <input type="text" placeholder="image" name="image" value="{{ restaurant.image }}">
  </div>
  <div class="input-group mb-3 col-12 col-md-10 mx-auto">
    <div class="input-group-prepend">
      <span class="input-group-text" id="basic-addon4">Location</span>
    </div>
    <input type="text" placeholder="location" name="location" value="{{ restaurant.location }}">
  </div>
  <div class="input-group mb-3 col-12 col-md-10 mx-auto">
    <div class="input-group-prepend">
      <span class="input-group-text" id="basic-addon5">Phone</span>
    </div>
    <input type="text" placeholder="phone" name="phone" value="{{ restaurant.phone }}">
  </div>
  <div class="input-group col mb-3 col-12 col-md-10 mx-auto">
    <div class="input-group-prepend">
      <span class="input-group-text" id="basic-addon6">Rating</span>
    </div>
    <input type="number" max="5" min="0" step="0.1" placeholder="0.0" name="rating" value="{{ restaurant.rating }}">
  </div>
  <div class="input-group mb-3 col-12 col-md-10 mx-auto">
    <div class="input-group-prepend">
      <span class="input-group-text " id="basic-addon7">Description</span>
    </div>
    <input type="text" placeholder="description" name="description" value="{{ restaurant.description }}">
  </div>
  

  <div class="input-group mb-3 col-12 col-md-10 mx-auto">
    <div class="input-group-prepend">
      <span class="input-group-text" id="basic-addon8">Google map</span>
    </div>
    <input type="text" placeholder="google_map" name="google_map" value="{{ restaurant.google_map }}">
  </div>

  <button type="submit">Save</button>
  <a href="/">back</a>
</form>