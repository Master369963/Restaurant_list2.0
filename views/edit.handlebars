<div class="container">
  <div class="col-12 text-center mb-3 mt-3">
    <h3>修改餐廳資料</h3>
  </div>
</div>

<div class="row text-center">
  <div class="col-12 mx-auto ">
    <form action="/restaurants/{{ restaurant._id }}?_method=PUT" method="POST" class="column">
      <div class="input-group mb-3 col-12 col-md-10 mx-auto justify-content-center">
        <div class="input-group-prepend">
          <span class="input-group-text" id="basic-addon1">Name</span>
        </div>
        <input class="form-control" type="text" name="name" value="{{ restaurant.name }}" required>
      </div>
      <div class="input-group mb-3 col-12 col-md-10 mx-auto justify-content-center">
        <div class="input-group-prepend">
          <span class="input-group-text" id="basic-addon2">Category</span>
        </div>
        <input class="form-control" type="text" placeholder="category" name="category"
          value="{{ restaurant.category }}" required>
      </div>
      <div class="input-group mb-3 col-12 col-md-10 mx-auto justify-content-center">
        <div class="input-group-prepend">
          <span class="input-group-text" id="basic-addon3">Image</span>
        </div>
        <input class="form-control" type="text" placeholder="image" name="image" value="{{ restaurant.image }}" required>
      </div>
      <div class="input-group mb-3 col-12 col-md-10 mx-auto justify-content-center">
        <div class="input-group-prepend">
          <span class="input-group-text" id="basic-addon4">Location</span>
        </div>
        <input class="form-control" type="text" placeholder="location" name="location"
          value="{{ restaurant.location }}" required>
      </div>
      <div class="input-group mb-3 col-12 col-md-10 mx-auto justify-content-center">
        <div class="input-group-prepend">
          <span class="input-group-text" id="basic-addon5">Phone</span>
        </div>
        <input class="form-control" type="text" placeholder="phone" name="phone" value="{{ restaurant.phone }}" required>
      </div>
      <div class="input-group col mb-3 col-12 col-md-10 mx-auto justify-content-center">
        <div class="input-group-prepend">
          <span class="input-group-text col-12" id="basic-addon6">Rating</span>
        </div>
        <input class="form-control" type="number" max="5" min="0" step="0.1" placeholder="0.0" name="rating"
          value="{{ restaurant.rating }}" required>
      </div>
      <div class="input-group mb-3 col-12 col-md-10 mx-auto justify-content-center">
        <div class="input-group-prepend">
          <span class="input-group-text" id="basic-addon7">Description</span>
        </div>
        <input class="form-control" type="text" placeholder="description" name="description"
          value="{{ restaurant.description }}" required>
      </div>
      <div class="input-group mb-3 col-12 col-md-10 mx-auto justify-content-center">
        <div class="input-group-prepend">
          <span class="input-group-text" id="basic-addon8">Google map</span>
        </div>
        <input class="form-control" type="text" placeholder="google_map" name="google_map"
          value="{{ restaurant.google_map }}" required>
      </div>

      <div class="d-flex justify-content-center mb-3">
        <button type="submit" class="btn btn-success mr-2">Save</button>
        <a href="/" class="btn btn-dark">back</a>
      </div>
    </form>

  </div>
</div>